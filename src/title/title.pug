mixin title1(slug, sourceUrl)
  if slug
    h1.title( id=slug )
      if sourceUrl
        a.source( href=sourceUrl title="Source code" )
      a.title_link( href='#' + slug title="Direct link to section" )
        block
  else
    h1.title
      block

