  "stylelint": {
    "extends": [
      "@smcv/stylelint-config"
    ],
    "rules": {
      "declaration-no-important": null,
      "property-no-unknown": null,
      "at-rule-no-unknown": null
    },
    "ignoreFiles": "dist/**"
  }
