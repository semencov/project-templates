  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate --fail-on-error",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore . && stylelint **/*.pcss"
  },
  "dependencies": {
    "@bazzite/nuxt-netlify": "^0.1.1",
    "@bazzite/nuxt-optimized-images": "^0.2.1",
    "@nuxtjs/tailwindcss": "^1.1.2",
    "nuxt": "^2.9.2",
    "nuxt-netlify-http2-server-push": "^0.1.3",
    "nuxt-svg-loader": "^1.0.1",
    "vue-lazyload": "^1.3.3"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "babel-eslint": "^10.0.3",
    "classnames": "^2.2.6",
    "css-mqpacker": "^7.0.0",
    "cssnano": "^4.1.10",
    "eslint": "^6.4.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^3.0.0",
    "eslint-plugin-vue": "^5.2.3",
    "husky": "^3.0.5",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-pngquant": "^8.0.0",
    "imagemin-svgo": "^7.0.0",
    "lint-staged": "^9.3.0",
    "lqip-loader": "^2.2.0",
    "postcss-hexrgba": "^1.0.2",
    "postcss-merge-longhand": "^4.0.11",
    "postcss-merge-rules": "^4.0.3",
    "postcss-nested": "^4.1.2",
    "postcss-pxtorem": "^4.0.1",
    "postcss-responsive-type": "^1.0.0",
    "posthtml": "^0.11.6",
    "posthtml-postcss": "^0.2.6",
    "posthtml-remove-attributes": "^1.0.0",
    "precss": "^4.0.0",
    "responsive-loader": "^1.2.0",
    "stylelint": "^10.1.0",
    "stylelint-config-recess-order": "^2.0.3",
    "stylelint-config-standard": "^19.0.0",
    "svgo": "^1.3.0",
    "tailwindcss-gradients": "^2.3.1",
    "tailwindcss-font-inter": "^1.0.0-0",
    "tailwindcss-spacing-helpers": "^1.0.2"
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "not ie 11",
    "not ie_mob 11",
    "not op_mini all",
    "not op_mob > 0",
    "not and_qq > 0",
    "not android > 0"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.vue": "eslint --fix",
    "*.pcss": [
      "stylelint --fix",
      "git add"
    ],
    "*.svg": [
      "svgo",
      "git add"
    ]
  },
  "stylelint": {
    "rules": {
      "property-no-unknown": null,
      "at-rule-no-unknown": null
    },
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-recess-order"
    ],
    "ignoreFiles": "dist/**"
  }
}
