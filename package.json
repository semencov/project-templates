  "browserslist": [
    "last 2 versions",
    "not ie 11",
    "not ie_mob 11",
    "not op_mini all",
    "not op_mob > 0",
    "not and_qq > 0",
    "not android > 0"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
