{
  "private": true,
  "scripts": {
    "spell": "yaspeller dist/**/*.html",
    "lint": "eslint . && stylelint src/**/*.sss",
    "test": "npm run lint & npm run build && size-limit && npm run spell",
    "clean": "rimraf dist/ .cache",
    "start": "parcel serve src/index.pug --open",
    "build": "rimraf dist/ && NODE_ENV=production ./scripts/build"
  },
  "engines": {
    "node": "^12.0.0"
  },
  "dependencies": {
    "autoprefixer": "^9.7.3",
    "css-mqpacker": "^7.0.0",
    "parcel-bundler": "^1.12.4",
    "postcss": "^7.0.23",
    "postcss-hexrgba": "^2.0.0",
    "postcss-media-minmax": "^4.0.0",
    "postcss-merge-rules": "^4.0.3",
    "postcss-mixins": "^6.2.3",
    "postcss-nested": "^4.2.1",
    "postcss-pxtorem": "^4.0.1",
    "posthtml": "^0.12.0",
    "posthtml-minify-classnames": "^0.2.2",
    "pug": "^2.0.4",
    "rimraf": "^3.0.0",
    "sugarss": "^2.0.0"
  },
  "devDependencies": {
    "@size-limit/file": "^2.2.1",
    "@smcv/eslint-config": "^1.1.5",
    "@smcv/stylelint-config": "^1.0.5",
    "eslint": "^6.7.2",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-es5": "^1.4.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^23.1.1",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prefer-arrow": "^1.1.7",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-unicorn": "^14.0.1",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "stylelint": "^12.0.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-recess-order": "^2.0.3",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-config-sugarss-recommended": "^2.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.2.0",
    "stylelint-high-performance-animation": "^1.4.0",
    "stylelint-images": "^2.0.0",
    "stylelint-no-browser-hacks": "^1.2.1",
    "stylelint-order": "^3.1.1",
    "stylelint-suitcss": "^3.0.0",
    "stylelint-use-nesting": "^1.2.1",
    "svgo": "^1.3.2",
    "yaspeller": "^6.0.2"
  },
  "browserslist": [
    "last 2 versions",
    "firefox esr",
    "not ie 11",
    "not ie_mob 11",
    "not op_mini all",
    "not op_mob > 0",
    "not and_qq > 0",
    "not android > 0"
  ],
  "postcss": {
    "plugins": {
      "postcss-mixins": {
        "mixinsDir": "mixins"
      },
      "postcss-media-minmax": {},
      "postcss-nested": {},
      "postcss-hexrgba": {},
      "postcss-pxtorem": {
        "propList": [
          "*"
        ],
        "selectorBlackList": [
          "html",
          "img"
        ],
        "rootValue": 16
      },
      "postcss-merge-rules": {},
      "autoprefixer": {}
    }
  },
  "eslintConfig": {
    "extends": "@smcv/eslint-config/node"
  },
  "eslintIgnore": [
    "node_modules",
    "dist",
    ".cache"
  ],
  "stylelint": {
    "extends": [
      "@smcv/stylelint-config/sss"
    ],
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "define-mixin",
            "mixin"
          ]
        }
      ],
      "declaration-no-important": null,
      "property-no-unknown": null,
      "suitcss/custom-property-no-outside-root": null
    },
    "ignoreFiles": [
      "dist/**"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint",
    "*.svg": [
      "svgo",
      "git add"
    ],
    "*.sss": [
      "stylelint --fix",
      "git add"
    ]
  },
  "size-limit": [
    {
      "name": "Critical",
      "path": "dist/index.html",
      "limit": "4 KB"
    },
    {
      "name": "Full",
      "path": [
        "dist/*.js"
      ],
      "limit": "200 KB"
    }
  ],
  "yaspeller": {
    "ignoreCapitalization": true,
    "dictionary": []
  }
}
